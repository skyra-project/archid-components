{
	"name": "@skyra/env-utilities",
	"version": "1.2.2",
	"description": "Functional utilities for reading and parsing environmental variables",
	"author": "@skyra",
	"license": "Apache-2.0",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.js",
	"types": "dist/cjs/index.d.cts",
	"type": "module",
	"exports": {
		"import": {
			"types": "./dist/esm/index.d.ts",
			"default": "./dist/esm/index.js"
		},
		"require": {
			"types": "./dist/cjs/index.d.cts",
			"default": "./dist/cjs/index.cjs"
		}
	},
	"sideEffects": false,
	"scripts": {
		"test": "vitest run",
		"build": "tsup",
		"watch": "tsup --watch",
		"typecheck": "tsc -p tsconfig.eslint.json",
		"lint": "eslint src --ext ts --fix -c ../../package.json",
		"prepack": "yarn build",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run"
	},
	"dependencies": {
		"dotenv": "^16.3.1",
		"dotenv-expand": "^10.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/archid-components.git",
		"directory": "packages/env-utilities"
	},
	"files": [
		"dist/"
	],
	"engines": {
		"node": ">=18"
	},
	"keywords": [
		"discord",
		"api",
		"http",
		"skyra",
		"typescript",
		"ts",
		"yarn"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/archid-components/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^2.2.3",
		"@vitest/coverage-v8": "^1.0.4",
		"esbuild-plugin-version-injector": "^1.2.1",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"vitest": "^1.0.4"
	}
}
