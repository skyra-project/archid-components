{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"incremental": false,
		"types": ["vitest/globals"]
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.mjs",
		"packages/**/tests/*.js",
		"packages/**/register*.js",
		"packages/**/register*.mjs",
		"packages/**/types*.js",
		"packages/**/types*.mjs",
		"scripts/",
		"./vitest.config.ts"
	]
}
